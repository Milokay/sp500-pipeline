# Pre-baked Python builder image with all analysis dependencies pinned.
# Build once, push to Artifact Registry, reference in cloudbuild.yaml.
# Rebuild only when dependencies change.
FROM python:3.12-slim

RUN pip install --no-cache-dir \
    yfinance \
    pandas \
    numpy \
    openpyxl \
    scipy \
    requests \
    tqdm \
    lxml \
    html5lib \
    python-dotenv

WORKDIR /workspace
